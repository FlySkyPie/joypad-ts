{
  "name": "joypad-ts",
  "version": "0.1.0",
  "description": "A JavaScript library that lets you connect various gaming controllers to your browser using the Gamepad API.",
  "main": "./dist/joypad-ts.umd.cjs",
  "module": "./dist/joypad-ts.js",
